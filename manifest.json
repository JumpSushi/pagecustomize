{
    "manifest_version": 3,
    "name": "Website Customizer",
    "version": "1.0",
    "description": "Customize websites by removing elements, changing fonts, sizes, and colors",
    "permissions": [
      "activeTab",
      "storage",
      "scripting",
      "tabs"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "content_scripts": [{
      "matches": ["<all_urls>"],
      "js": ["functions.js", "content.js"],
      "run_at": "document_start"
    }],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/1.png",
        "48": "icons/2.png",
        "128": "icons/3.png"
      }
    },
    "web_accessible_resources": [
      {
        "resources": ["import_export.html", "import_export.js"],
        "matches": ["<all_urls>"]
      }
    ]
}